<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_inherit_form" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.button</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='do_print_picking']" position="after">
                    <button name="action_export_csv"
                            string="Export to CSV"
                            type="object"
                            invisible="state not in ['done']"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
