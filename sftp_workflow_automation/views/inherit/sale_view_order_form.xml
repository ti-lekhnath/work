<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_inherit_form" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.button</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='order_details']//field[@name='date_order']" position="before">
                    <group name="3pl_workflow">
                        <field name="send_to_3pl" invisible="state not in ('sale')"/>
                    </group>
                </xpath>

                <xpath expr="//header/button[@name='action_quotation_send']" position="before">
                    <button name="generate_csv_to_3pl"
                            string="Generate CSV for 3PL"
                            type="object"
                            invisible="send_to_3pl == False"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
