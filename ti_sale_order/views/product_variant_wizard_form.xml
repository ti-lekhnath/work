<odoo>
    <record id="view_product_variant_wizard_form" model="ir.ui.view">
      <field name="name">product.variant.wiz.form</field>
      <field name="model">product.variant.wiz</field>
      <field name="arch" type="xml">
        <form string="Select Product Variants">
          <group>
            <field name="sale_order_id" readonly="1"/>
            <field name="product_id" readonly="1"/>
          </group>

          <field name="variant_line_ids" nolabel="1">
            <list editable="bottom" create="false" delete="false">
              <field name="product_variant_id"/>
              <field name="sale_order_line_id" column_invisible="1"/>
              <field name="quantity"/>
            </list>
          </field>

          <footer>
            <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>
  </odoo>
