<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_with_button" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.button</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/list//field[@name='product_template_id']" position="after">
                    <button name="action_line_button"
                            string="variant"
                            type="object"
                            class="btn-primary oe_highlight"
                            />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
